                      Grid.Column="1"
                      MinWidth="40"
                      Margin="5,0,0,0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Text="{Binding Script}"
                      TextAlignment="Left"
                      ToolTip="{Binding ProcessedScriptAnnotated}"
                       />
