                    <local:ExprControl Margin="8,0,0,0" Label="Dec (decimal degrees):" Exp="{Binding DecExpr}" />
                </StackPanel>
            </nina:SequenceBlockView.SequenceItemContent>
        </nina:SequenceBlockView>
    </DataTemplate>
    
