<UserControl x:Class="WhenPlugin.When.ExprComboControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WhenPlugin.When">
    <UserControl.Resources>
        <local:ExprConverter x:Key="ec" />
        <local:ValConverter x:Key="vc" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal"
                VerticalAlignment="Center" 
                DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ExprComboControl}}}">
        <TextBlock VerticalAlignment="Center" Margin="3,-4,0,-4">
            <TextBlock.Text>
                <MultiBinding Converter="{StaticResource ec}">
                    <Binding Path="Exp"  />
                    <Binding Path="Exp.ValueString"  />
                    <Binding Path="Combo" />
                </MultiBinding>
            </TextBlock.Text>
            <TextBlock.Foreground>
                <MultiBinding Converter="{StaticResource vc}">
                    <Binding Path="Exp" />
                    <Binding Path="Exp.ValueString"  />
                </MultiBinding>
            </TextBlock.Foreground>
        </TextBlock>
    </StackPanel>
</UserControl>
     
     
    